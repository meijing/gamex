= form_for @tip do |f|
  - if @tip.errors.any?
    #error_explanation
      %h2= "#{pluralize(@tip.errors.count, "error")} prohibited this tip from being saved:"
      %ul
        - @tip.errors.full_messages.each do |msg|
          %li= msg

  .control-group
    %label.control-label= 'Text:'
    .controls
      = f.text_field :text
  .actions
    = f.submit 'Save'
