%h1 Listing toys

%table
  %tr
    %th
    %th
    %th

  - @toys.each do |toy|
    %tr
      %td= toy.name
      %td= link_to image_tag('lupa.png', :size=>"30x30"), toy
      %td= link_to image_tag('lapiz.png', :size=>"30x30"), edit_toy_path(toy)
      %td= link_to image_tag('trash.png', :size=>"30x30"), toy, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'New Toy', new_toy_path, :class=>'btn btn-primary'
= link_to 'Back', home_path, :class=>'btn btn-danger'
